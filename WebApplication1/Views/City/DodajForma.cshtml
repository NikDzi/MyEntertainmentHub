
@{
    //Layout = null;
}
@model WebApplication1.ViewModels.AddCityVM
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DodajForma</title>
</head>
<body>
    <form action="/City/SnimiForma" method="post">
        @Html.AntiForgeryToken()
        <input asp-for="CityID" style="display: none" />

        <div class="form-group">
            <label>City Name</label>
            <input class="form-control" asp-for="CityName" />
            <span asp-validation-for="CityName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Country</label>
            <select class="form-control" asp-for="CountryID" asp-items="Model.CountryStavke">
                <option></option>
            </select>
        </div>
        <input type="submit" class="btn btn-primary" id="submitButton"/>
    </form>
</body>
</html>
<style>
    #submitButton {
        background-color:#343a40;
    }
</style>
<script>
    $(function() {
      var select = $('select');
      select.html(select.find('option').sort(function(x, y) {
        // to change to descending order switch "<" for ">"
        return $(x).text() > $(y).text() ? 1 : -1;
      }));
    });
</script>
